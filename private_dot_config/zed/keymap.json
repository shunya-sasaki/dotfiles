[
	{
		"context": "Editor && vim_mode == normal",
		"bindings": {
			"space f f": "file_finder::Toggle",
			"space f g": "pane::DeploySearch",
			"space e": "project_panel::ToggleFocus",
			"space g": "git_panel::ToggleFocus",
			"g r": "editor::Rename",
			"ctrl-b": "workspace::ToggleLeftDock",
			"ctrl-n": "pane::ActivateNextItem",
			"ctrl-p": "pane::ActivatePreviousItem",
			"ctrl-t": "terminal_panel::ToggleFocus",
			"alt-j": "vim::ResizePaneDown",
			"alt-k": "vim::ResizePaneUp",
			"alt-h": "vim::ResizePaneLeft",
			"alt-l": "vim::ResizePaneRight",
			"ctrl-a l": "workspace::ActivatePaneRight",
			"ctrl-a h": "workspace::ActivatePaneLeft",
			"ctrl-a j": "workspace::ActivatePaneDown",
			"ctrl-a k": "workspace::ActivatePaneUp"
		}
	},
	{
		"context": "Terminal",
		"bindings": {
			"escape escape": "terminal_panel::Toggle",
			"ctrl-a |": "pane::SplitVertical",
			"ctrl-a l": "workspace::ActivatePaneRight",
			"ctrl-a h": "workspace::ActivatePaneLeft",
			"ctrl-a j": "workspace::ActivatePaneDown",
			"ctrl-a k": "workspace::ActivatePaneUp"
		}
	},
	{
		"context": "ProjectPanel",
		"bindings": {
			"a": "project_panel::NewFile",
			"shift-A": "project_panel::NewDirectory",
			"d": "project_panel::Delete",
			"m": "project_panel::Rename",
			"y": "project_panel::Copy",
			"p": "project_panel::Paste",
			"x": "project_panel::Cut"
		}
	},
	{
		"context": "ProjectSearchBar",
		"bindings": {
			"escape escape": "pane::CloseActiveItem"
		}
	},
	{
		"context": "ProjectSearchBar > Editor",
		"bindings": {
			"escape escape": "pane::CloseActiveItem",
			"ctrl-n": "search::SelectNextMatch",
			"ctrl-p": "search::SelectPreviousMatch"
		}
	},
	{
		"context": "GitPanel && ChangesList",
		"bindings": {
			"space": "git::ToggleStaged",
			"a": "git::StageAll",
			"u": "git::UnstageAll",
			"c": "git::Commit",
			"shift-c": "git::ExpandCommitEditor",
			"p": "git::Pull",
			"shift-p": "git::Push"
		}
	},
	{
		"context": "GitPanel && CommitEditor > Editor && vim_mode == normal",
		"bindings": {
			"ctrl-i": "git::GenerateCommitMessage",
			"c": "git::Commit"
		}
	},
	{
		"context": "GitCommit > Editor && vim_mode == normal",
		"bindings": {
			"ctrl-i": "git::GenerateCommitMessage",
			"c": "git::Commit"
		}
	}
]
